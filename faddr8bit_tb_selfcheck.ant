`timescale 1ns/1ps

module faddr8bit_tb_selfcheck;
    reg [7:0] A = 8'b00000000;
    reg [7:0] B = 8'b00000000;
    reg ce = 1'b0;
    reg Cin = 1'b0;
    reg clk = 1'b0;
    reg rst = 1'b0;
    wire CO;
    wire [7:0] SUM;

    parameter PERIOD = 200;
    parameter real DUTY_CYCLE = 0.5;
    parameter OFFSET = 100;

    initial    // Clock process for clk
    begin
        #OFFSET;
        forever
        begin
            clk = 1'b0;
            #(PERIOD-(PERIOD*DUTY_CYCLE)) clk = 1'b1;
            #(PERIOD*DUTY_CYCLE);
        end
    end

    faddr8bit UUT (
        .A(A),
        .B(B),
        .ce(ce),
        .Cin(Cin),
        .clk(clk),
        .rst(rst),
        .CO(CO),
        .SUM(SUM));

    integer TX_FILE = 0;
    integer TX_ERROR = 0;
    
    initial begin    // Annotation process for clock clk
        #0;
        ANNOTATE_CO;
        ANNOTATE_SUM;
        #OFFSET;
        forever begin
            #115;
            ANNOTATE_CO;
            ANNOTATE_SUM;
            #85;
        end
    end

    initial begin  // Open the annotations file...
        TX_FILE = $fopen("C:\\Documents and Settings\\student\\lab2\\faddr8bit_tb_selfcheck.ano");
        #5200 // Final time:  5200 ns
        $display("Success! Annotation Simulation Complete.");
        $fdisplay(TX_FILE, "Total[%d]", TX_ERROR);
        $fclose(TX_FILE);
        $finish;
    end

    initial begin
        // -------------  Current Time:  100ns
        #100;
        ce = 1'b1;
        rst = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  185ns
        #85;
        rst = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  385ns
        #200;
        A = 8'b01111111;
        B = 8'b00010001;
        // -------------------------------------
        // -------------  Current Time:  585ns
        #200;
        Cin = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  785ns
        #200;
        ce = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  1185ns
        #400;
        Cin = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  1385ns
        #200;
        ce = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1785ns
        #400;
        A = 8'b11110000;
        B = 8'b00100000;
        // -------------------------------------
    end

    task ANNOTATE_CO;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,CO,%b]", $time, CO);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

    task ANNOTATE_SUM;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,SUM,%b]", $time, SUM);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

endmodule

